<div class="list-group selected">
  <a href="#" class="list-group-item">
    <h3 class="list-group-item-heading center">search for products</h3>
  </a>
</div>

<div class="row" style="margin:5rem;">
    <div class="col-sm-offset-2 col-xs-8">
      <%= form_with(model: @search, local: true) do |form| %>
            <%= render "devise/shared/error_messages", resource: @search %>

            <div class="form-group">
                <%= form.label :keywords %>
                <%= form.text_field :keywords, class: "form-control", placeholder: "Enter name of product", autofocus: true %>
            </div>

            <div class="form-group">
                <div class="col-md-6 no-padding">
                    <%= form.label :min_price  %>
                    <%= form.text_field :min_price, class: "form-control", placeholder: "Enter min price" %>
                </div>
                <div class="col-md-6 no-padding left-padding">
                    <%= form.label :max_price  %>
                    <%= form.text_field :max_price, class: "form-control", placeholder: "Enter max price"%>
                </div>
            </div>
            <br>
            <br>
            <br>
            <br>
            <br>
            <div class="form-group center"style="margin-top:3rem;">
                <%= form.submit class: "btn btn-primary btn-md"%> 
                <%= link_to 'Back', :back, class: "btn btn-default btn-md"%>
            </div>
      <% end %>
    </div>
</div>